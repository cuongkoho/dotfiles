# Python/Django aliases
# -------------------------------------------------------------------
# Running Django development server
# Usage: dj port_number(int)
# TODO: accept default port of 8000
dj() {
    python manage.py runserver 0.0.0.0:"$1"
}

alias activate='source env/bin/activate'

