dropbox_fix() {
    dropbox stop &&
    DBUS_SESSION_BUS_ADDRESS=''
    dropbox start
}

run() {
    number=$1
    shift
    for i in `seq $number`; do
    $@
    done
}

# Alias kill port
killport()
{
    sudo kill -9 $(sudo lsof -t -i:"$1")
}

# Alias map port using iptables
mapport()
{
    sudo iptables -t nat -A OUTPUT -o lo -p tcp --dport "$1" -j REDIRECT --to-port "$2"
}

